<form method="post" action="/songs/<%=@song.slug%>/edit">
  Name <input type="text" value="<%=@song.name%>" name="song_name" id="Name"></input>
  <!-- Song: <%=@song.name%> -->

  <input type="text" name="song[artist][name]" id="Artist Name"></input>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%></input>
  <% end %>
  <input type="submit" value="Save">
</form>
